<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:onClick="onClick"
    >



    <LinearLayout
        android:id="@+id/ll_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >
        <CheckBox
            android:id="@+id/box_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="db"
            android:checked="true"
            />

        <CheckBox
            android:id="@+id/box_tree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tree"/>

        <CheckBox
            android:id="@+id/box_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="generate"
        app:layout_constraintTop_toBottomOf="@+id/ll_checkbox"
        android:onClick="onClick"
        />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="search"
        app:layout_constraintTop_toBottomOf="@+id/btn_generate"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_search"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="@+id/et_search"
        app:layout_constraintLeft_toRightOf="@+id/et_search"/>

    <TextView
        android:id="@+id/tv_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search"
        android:scrollbars="vertical"
        android:singleLine="false"
        app:layout_constraintTop_toBottomOf="@+id/et_search"/>

</android.support.constraint.ConstraintLayout>