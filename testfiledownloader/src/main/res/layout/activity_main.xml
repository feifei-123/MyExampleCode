<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/tv_start_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="onClick"
        android:text="start_single"
        app:layout_constraintBottom_toTopOf="@+id/tv_pause_single"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tv_pause_single"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:onClick="onClick"
        android:text="stop_single"
        app:layout_constraintBottom_toTopOf="@+id/tv_delete_single"
        app:layout_constraintStart_toStartOf="@+id/tv_start_single"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_single" />

    <Button
        android:id="@+id/tv_delete_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="delete_single"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_pause_single"
        app:layout_constraintTop_toBottomOf="@+id/tv_pause_single" />

    <Button
        android:id="@+id/tv_start_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start_mutil"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/tv_stop_multi"
        app:layout_constraintEnd_toEndOf="@+id/tv_stop_multi"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tv_stop_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop_multi"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/tv_delete_all"
        app:layout_constraintEnd_toEndOf="@+id/tv_delete_all"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_multi" />

    <Button
        android:id="@+id/tv_delete_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="delete_all"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_stop_multi" />


</android.support.constraint.ConstraintLayout>